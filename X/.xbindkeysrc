# "exec" is used for potentially long-running commands

"${HOME}/local/bin/speaker-toggle"
    XF86AudioMute

# ctrl+alt+shift+down
"pamixer --decrease 3"
    m:0xd + c:116

# ctrl+alt+shift+up
"pamixer --increase 3"
    m:0xd + c:111

"${HOME}/local/bin/mic-toggle"
   XF86AudioMicMute

"switch-pulse-output"
   Shift+Mod4 + o

"xbacklight -inc 5"
   XF86MonBrightnessUp

"xbacklight -dec 5"
   XF86MonBrightnessDown

"${HOME}/local/bin/wlan-toggle"
   XF86WLAN

"/usr/bin/sudo /usr/local/bin/suspend"
    Control+Alt + s

"exec firefox"
    Mod4 + f

"exec urxvtc"
    Mod4 + Return

# Backup if urxvtd crashes
"exec urxvt -e bash"
    Shift+Mod4 + Return

# alt+v
"dmenu_run"
    Mod4 + v

# alt+p
"exec paste-buffer"
    Mod4 + p

# ctrl+alt+l
"exec i3lock -c 000000"
    Control+Alt + l

# ctrl+alt+printscreen
"exec i3lock -c 000000"
    Print
